<!DOCTYPE html>
<html lang="en">
<head>
	<title>Login</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
	<nav class="navbar">
        <div class="join-box">
            <p class="join-msg"><%= translations.joinMessage %></p>

            <select name="language" id="language" onchange="changeLanguage(this.value)">
                <option value="en" <%= language === 'en' ? 'selected' : '' %>>English</option>
                <option value="ru" <%= language === 'ru' ? 'selected' : '' %>>Russian</option>
            </select>

            <button class="btn" onclick="location.href='/blog'"><%= translations.blog %></button>

            <button class="btn join-btn" onclick="location.href='/register'"><%= translations.joinNow %></button>
        </div>
    </nav>

    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
      
                  <div class="mb-md-5 mt-md-4 pb-5">
                    <form action="/register" method="post">
                    <h2 class="fw-bold mb-2 text-uppercase"><%= translations.register %></h2>
                    <p class="text-white-50 mb-5">Please enter your login and password!</p>
                    
                    <div class="form-outline form-white mb-4">
                      <input type="text" name="firstName" class="form-control form-control-lg" required/>
                      <label class="form-label" for="typePasswordX"><%= translations.firstname %></label>
                    </div>
                    <div class="form-outline form-white mb-4">
                      <input type="text" name="lastName" class="form-control form-control-lg" required/>
                      <label class="form-label" for="typePasswordX"><%= translations.lastname %></label>
                    </div>
                    <div class="form-outline form-white mb-4">
                      <input type="text" name="username" class="form-control form-control-lg" required/>
                      <label class="form-label" for="typePasswordX"><%= translations.username %></label>
                    </div>
                    <div class="form-outline form-white mb-4">
                      <input type="password" name="password" class="form-control form-control-lg" required/>
                      <label class="form-label" for="typePasswordX"><%= translations.password %></label>
                    </div>
      
                    <button class="btn btn-outline-light btn-lg px-5" type="submit"><%= translations.register %></button>
                  </div>
      
                  <div>
                    <p class="mb-0"><%= translations.alreadyHave %> <a href="/login" class="text-white-50 fw-bold"><%= translations.login %></a>
                    </p>
                  </div>
                </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function changeLanguage(selectedLanguage) {
            window.location = `/?lang=${selectedLanguage}`;
        }
    </script>    
</body>
</html>